{
  "name": "v2ray-electron",
  "productName": "V2Ray Electron",
  "description": "A V2Ray client built with Electron for Windows and macOS",
  "version": "v0.15.0",
  "author": "Jie Lu",
  "scripts": {
    "dev": "electron-webpack dev",
    "compile": "electron-webpack",
    "dist": "yarn compile && electron-builder -p never",
    "lint": "eslint --max-warnings 0 --ext .js --ext .ts .",
    "download": "ts-node -O '{\"module\":\"commonjs\"}' download-v2ray.ts",
    "downloadAll": "ts-node -O '{\"module\":\"commonjs\"}' download-v2ray.ts --all"
  },
  "license": "MIT",
  "dependencies": {
    "@material-ui/core": "^4.11.0",
    "about-window": "^1.13.0",
    "auto-launch": "^5.0.1",
    "electron-debug": "^1.3.0",
    "electron-is-dev": "^1.1.0",
    "electron-log": "^3.0.6",
    "electron-store": "^3.2.0",
    "electron-updater": "^4.0.14",
    "fs-extra": "^9.0.1",
    "monaco-loader": "^0.8.2",
    "react": "^16.8.6",
    "react-ace": "^7.0.2",
    "react-dom": "^16.8.6",
    "react-router-static": "^1.0.0",
    "source-map-support": "^0.5.10",
    "sudo-prompt": "^8.1.0",
    "typeface-roboto": "^0.0.54"
  },
  "devDependencies": {
    "@babel/preset-react": "^7.0.0",
    "@types/auto-launch": "^5.0.1",
    "@types/fs-extra": "^9.0.1",
    "@types/node": "^12.12.6",
    "@types/node-fetch": "^2.5.7",
    "@types/react": "^16.8.23",
    "@types/react-dom": "^16.8.4",
    "@types/semver": "^6.0.0",
    "@types/unzipper": "^0.9.2",
    "@typescript-eslint/eslint-plugin": "^3.6.1",
    "@typescript-eslint/parser": "^3.6.1",
    "electron": "^18.3.7",
    "electron-builder": "^22.7.0",
    "electron-webpack": "^2.8.2",
    "electron-webpack-ts": "^4.0.1",
    "eslint": "^7.4.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.14.2",
    "eslint-plugin-react-hooks": "^1.6.1",
    "husky": "^3.0.0",
    "lint-staged": ">=8",
    "node-fetch": "^2.6.7",
    "prettier": "^2.0.5",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7",
    "unzipper": "^0.8.13",
    "webpack": "^4.35.2"
  },
  "build": {
    "appId": "com.v2ray.electron",
    "productName": "V2Ray Electron",
    "asarUnpack": [
      "assets/v2ray/**/*",
      "assets/proxy_conf_helper"
    ],
    "mac": {
      "icon": "assets/icon.icns",
      "files": [
        "src/**",
        "assets/*",
        {
          "from": "assets/v2ray/v2ray-macos",
          "to": "assets/v2ray/v2ray"
        }
      ],
      "extendInfo": {
        "LSUIElement": 1
      }
    },
    "win": {
      "icon": "assets/icon.ico",
      "files": [
        "src/**",
        "assets/*",
        {
          "from": "assets/v2ray/v2ray-win",
          "to": "assets/v2ray/v2ray"
        }
      ]
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix",
      "git add"
    ]
  }
}

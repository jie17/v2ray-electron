{
  "name": "v2ray-electron",
  "productName": "V2Ray Electron",
  "description": "A V2Ray client built with Electron for Windows and macOS",
  "version": "v0.12.0",
  "author": "Jie Lu",
  "main": "src/index.js",
  "scripts": {
    "start": "./node_modules/.bin/electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "license": "MIT",
  "dependencies": {
    "about-window": "^1.7.1",
    "auto-launch": "^5.0.1",
    "electron-debug": "^1.3.0",
    "electron-is-dev": "^0.3.0",
    "electron-log": "^2.2.7",
    "electron-store": "^1.2.0",
    "electron-updater": "^4.0.0",
    "fs-extra": "^4.0.0",
    "monaco-loader": "^0.8.2",
    "sudo-prompt": "^8.1.0"
  },
  "devDependencies": {
    "adm-zip": "^0.4.7",
    "electron": "^4.1.1",
    "electron-builder": "^20.39.0",
    "request": "^2.81.0",
    "unzipper": "^0.8.11"
  },
  "build": {
    "publish": [
      "github"
    ],
    "appId": "com.v2ray.electron",
    "productName": "V2Ray Electron",
    "asarUnpack": [
      "assets/v2ray/**/*",
      "assets/proxy_conf_helper"
    ],
    "mac": {
      "icon": "assets/icon.icns",
      "files": [
        "src/**",
        "assets/*",
        {
          "from": "assets/v2ray/v2ray-macos",
          "to": "assets/v2ray/v2ray"
        }
      ]
    },
    "win": {
      "icon": "assets/icon.ico",
      "files": [
        "src/**",
        "assets/*",
        {
          "from": "assets/v2ray/v2ray-win",
          "to": "assets/v2ray/v2ray"
        }
      ]
    }
  }
}
